        <img src="/logos/broadcom-white.png" alt="Broadcom" class="logo-dark" />
      </div>
      <div class="logo-item">
        <img src="/logos/Scotiabank_logo_svg.png" alt="Scotiabank" class="logo-light" />
        <img src="/logos/Scotiabank_logo_svg.png" alt="Scotiabank" class="logo-dark" />
      </div>
