<style>
  .footer {
    background: #000;
    color: #fff;
    padding: 5rem 0 2rem;
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 2fr 1fr;
    gap: 4rem;
    padding-bottom: 4rem;
    border-bottom: 1px solid #222;
    margin-bottom: 2rem;
  }
  
  .footer-logo {
    height: 40px;
    width: auto;
    margin-bottom: 0.75rem;
  }
  
  .footer-tagline {
    font-size: var(--text-sm);
    color: #999;
  }
  
  .footer-nav {
    display: flex;
    gap: 4rem;
  }
  
  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .footer-heading {
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #fff;
    margin-bottom: 0.5rem;
  }
  
  .footer-col a,
  .footer-contact a {
    font-size: var(--text-sm);
    color: #999;
    transition: color var(--transition);
  }
  
  .footer-col a:hover,
  .footer-contact a:hover {
    color: #fff;
  }
  
  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .footer-bottom p {
    font-size: var(--text-xs);
    color: #666;
  }
  
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
    
    .footer-nav {
      flex-direction: column;
      gap: 2rem;
    }
  }
</style>
